# Fly.io 配置文件示例
# 使用方法：
# 1. 复制此文件为 fly.toml
# 2. 运行 fly launch 自动配置
# 3. 或手动编辑此文件

app = "your-app-name"  # 替换为你的应用名称
primary_region = "hkg"  # 选择离你最近的区域

[build]
  dockerfile = "Dockerfile"

[env]
  NODE_ENV = "production"
  PORT = "8888"

[http_service]
  internal_port = 8888
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]

[[services]]
  protocol = "tcp"
  internal_port = 8888
  processes = ["app"]

  [[services.ports]]
    port = 80
    handlers = ["http"]
    force_https = true

  [[services.ports]]
    port = 443
    handlers = ["tls", "http"]

# 持久化存储配置（数据库）
[mounts]
  source = "database"
  destination = "/app/server/database"

